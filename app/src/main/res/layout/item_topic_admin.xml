<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_background"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="8dp">

    <EditText
        android:id="@+id/etTopicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Topic Name"
        android:textSize="25dp"
        android:enabled="false"/>

    <EditText
        android:id="@+id/etTopicDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Topic Description"
        android:textSize="20dp"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit_icon"
            android:scaleType="fitCenter"
        android:contentDescription="Sửa chủ đề"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_cancel_icon"
        android:contentDescription="Xóa chủ đề"/>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btnCancelEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_cancel_icon"
        android:contentDescription="Hủy chỉnh sửa"/>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btnSaveEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/save_icon"
        android:contentDescription="Lưu chỉnh sửa"/>
    </LinearLayout>

</LinearLayout>
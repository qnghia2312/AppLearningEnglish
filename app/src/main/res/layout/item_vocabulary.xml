<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_vocabulary_border"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    >

    <TextView
        android:id="@+id/tvWord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="word"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnFavorite"/>

    <TextView
        android:id="@+id/tvMean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="mean"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWord"
        app:layout_constraintEnd_toStartOf="@id/btnFavorite"/>

    <TextView
        android:id="@+id/tvPronunciation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="pronunciation: "
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMean"
        app:layout_constraintEnd_toStartOf="@id/btnFavorite"/>

    <TextView
        android:id="@+id/tvExample"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="example: "
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPronunciation"
        app:layout_constraintEnd_toStartOf="@id/btnFavorite"/>

    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/favorite_icon_false"
        android:contentDescription="Yêu thích"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>